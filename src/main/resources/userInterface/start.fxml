<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" maxHeight="500.0" maxWidth="800.0" minHeight="500.0" minWidth="800.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="warehouse.controllers.MainController">
  <children>
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
      <menus>
          <Menu fx:id="mnuOrders" mnemonicParsing="false" text="Orders">
              <MenuItem fx:id="mnuAddNewOrder" mnemonicParsing="false" onAction="#addNewOrder" text="Add New Order" />
              <MenuItem fx:id="mnuAllOrders" mnemonicParsing="false" onAction="#showAllOrders" text="All Orders" />
          </Menu>
            <Menu fx:id="mnuCustomers" mnemonicParsing="false" text="Customers">
              <items>
                <MenuItem fx:id="mnuAddNewCustomer" mnemonicParsing="false" onAction="#addNewCustomer" text="Add New Customer" />
                  <MenuItem fx:id="mnuAllCustomers" mnemonicParsing="false" onAction="#showAllCustomers" text="All Customers" />
              </items>
            </Menu>
            <Menu fx:id="mnuProducts" mnemonicParsing="false" text="Products">
              <items>
                <MenuItem fx:id="mnuAddNewProduct" mnemonicParsing="false" onAction="#addNewProduct" text="Add New Product" />
                  <MenuItem fx:id="mnuAllProducts" mnemonicParsing="false" onAction="#showAllProducts" text="All Products" />
              </items>
            </Menu>
            <Menu fx:id="mnuSuppliers" mnemonicParsing="false" text="Suppliers">
              <items>
                <MenuItem fx:id="mnuAddNewSupplier" mnemonicParsing="false" onAction="#addNewSupplier" text="Add New Supplier" />
                  <MenuItem fx:id="mnuAllSuppliers" mnemonicParsing="false" onAction="#showAllSuppliers" text="All Suppliers" />
              </items>
            </Menu>
            <Menu fx:id="mnyUnits" mnemonicParsing="false" text="Units">
              <items>
                <MenuItem fx:id="mnuAddNewUnit" mnemonicParsing="false" onAction="#addNewUnit" text="Add New Unit" />
                  <MenuItem fx:id="mnuAllUnits" mnemonicParsing="false" onAction="#showAllUnits" text="All Units" />
              </items>
            </Menu>
            <Menu fx:id="mnuExit" mnemonicParsing="false" text="Exit">
              <items>
                <MenuItem fx:id="mnuExitProgram" mnemonicParsing="false" onAction="#exitProgram" text="Exit Program" />
              </items>
            </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
          <BorderPane fx:id="content" stylesheets="@../styles/style.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

          </BorderPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
